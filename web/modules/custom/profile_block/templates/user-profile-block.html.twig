<div class='wrapright'>
  <div class='top'>  
    <a class='uname'><h4>{{ uname }}</h4></a>
    <div class='set_tab' style='display:{{ display_current }}'>
      <a href='edit' class='edit_profile'>Edit Profile</a>
      <a href='#' class='settings'>Set</a>
    </div>
    <div class='btn-not-logged-in {{ display_other }}' id='#aaa'>
      <a href='#' class='message'>Message</a>
      <a class='suggestion' id='suggestion'></a>
      <a href='#' class='user_activity'>...</a>
    </div>
  </div>
  <div class='wrapcount'> 
    <span>{{ post_count }}<a> posts</a></span> 
    <span>{{ followers_count }} {{ followers_link }} {{ attached }}</span> 
    <span>{{ following_count }} {{ following_link }} {{ attached }}</span> 
  </div>
  <div class='bottom'>
    <p class='name'>{{ name }}</p> 
    <p class='bio'>{{ bio }}</p> 
  </div>
</div>
